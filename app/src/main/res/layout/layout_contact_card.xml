<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootLayoutProductCard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        card_view:elevation="7dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/card_background_ripple"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:textSize="28sp"
                android:text="M"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/circle_shape_background"
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="4dp"
                android:gravity="center"
                tools:text="Adidas Shoes"
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:textColor="@color/titleColor"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="4dp"
                android:gravity="center"
                tools:text="Adidas Shoes"
                android:id="@+id/txtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:textColor="@color/titleColor"
                android:textSize="10sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>